<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="debug" strict="true" name="MP3Media" packages="org.apache.logging.log4j.test">
  <Properties>
    <Property name="filename">mp3media.log</Property>
  </Properties>
  <ThresholdFilter level="error"/>
 
  <Appenders>
    <File name="File" fileName="src/test/resources/${filename}">
      <PatternLayout pattern="%m%n"/>
      <ThresholdFilter level="error"/>
    </File>
  </Appenders>
 
  <Loggers>
    <Root level="trace">
      <AppenderRef ref="File"/>
      </Root>
  </Loggers>
 
</Configuration>
